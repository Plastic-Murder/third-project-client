<section class="bg-light display-uploads" id="portfolio">
    <div class="container showtable">
        <div class="row">
            <div class="col-lg-12 text-center">
              <h2 class="section-heading">All Files</h2>
                {{#each uploads as |upload|}}
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-4 col-sm-6 portfolio-item">
                                <div id="{{upload._id}}-uploads">
                                    <a class="portfolio-link portfolio-hover" href="{{upload.url}}">
                                        <img class="img-fluid" src="{{upload.url}}" alt="">
                                    </a>
                                    <div class="portfolio-caption">
                                        <h4>{{upload.title}}</h4>
                                        <h5>{{upload.tag}}</h5>
                                        {{#correctUser upload._id upload.currentUser._id upload.owner }}
                                        {{/correctUser}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>